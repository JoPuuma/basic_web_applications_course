<div class="card">
    <div class="card-header">
        <input type="text" name="title" class="form-control" id="title"
            value="{{this.title}}" placeholder="Questionnaire title"
            required>
    </div>
    <div class="card-body">
        <div class="form-group row">
            <label for="submissions" class="col-sm-2 col-form-label">Max submissions</label>
            <input type="number" min="1" name="submissions" class="col-sm-9 form-control" id="submissions"
                value="{{this.submissions}}" required>
        </div>
    </div>
</div>
