<div class="container">
    <div class="row mt-5">
        <div class="col-md-6 m-auto">
            <div class="card card-body">
                {{#if new}}
                <h3 class="text-center mb-3">Add a new question</h3>
                {{>messages}}
                <form method="POST" action="/questionnaires/new/{{questionnaire.id}}">
                {{else}}
                <h3 class="text-center mb-3">Edit the question</h3>
                {{>messages}}
                <form method="POST" action="/questionnaires/edit/question/{{question.id}}">
                {{/if}}
                    <div class="form-group">
                        <label for="title">Title</label>
                        <input type="text" name="title" class="form-control" id="title"
                            {{#if (not new)}}value="{{question.title}}"{{/if}}
                            required>
                    </div>
                    <button type="submit" class="btn btn-primary">Save</button>
                </form>
                <p class="lead mt-4"><a href="/questionnaires/{{questionnaire.id}}">Cancel</a></p>
            </div>
        </div>
    </div>
</div>
