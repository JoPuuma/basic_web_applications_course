<div class="container">
    {{>messages}}
    <div class="row mt-5">
        <div class="col-md-6 m-auto">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Are you sure you want to remove: {{title}}</h3>
                </div>
                <div class="card-footer">
                    <form method="POST">
                        <input type="hidden" name="_csrf" value="{{csrfToken}}">
                        <button type="submit" class="btn btn-danger">Remove</button>
                    </form>
                    <p class="lead mt-4"><a href="/questionnaires">Cancel</a></p>
                </div>
            </div>
        </div>
    </div>
</div>
